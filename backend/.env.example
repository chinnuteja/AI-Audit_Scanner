# AI SEO Auditor - Environment Variables

# App
DEBUG=false

# Database (SQLite default, or use PostgreSQL)
DATABASE_URL=sqlite:///./audits.db

# Firecrawl (for JS-heavy pages - optional but recommended)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# PageSpeed Insights (for performance metrics - optional)
PAGESPEED_API_KEY=your_pagespeed_api_key_here

# Fetch settings
HTTP_TIMEOUT_SECONDS=15
MAX_REDIRECTS=5
MAX_RETRIES=2
FIRECRAWL_TIMEOUT_SECONDS=30

# Cache
CACHE_TTL_SECONDS=86400

# Circuit breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_COOLDOWN_SECONDS=60
